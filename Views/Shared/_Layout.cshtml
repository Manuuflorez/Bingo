<!DOCTYPE html>
<html lang="en">

<head>
    @RenderSection("Styles", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bingoo!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bingoo.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bingoo!</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1"></ul>
                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Bienvenido, @User?.Identity?.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm"
                                    class="nav-link">
                                    <button type="submit" class="btn btn-link text-dark"
                                        style="border:none; background:none; padding:0; font-size:inherit; color:inherit; cursor:pointer;">
                                        Cerrar sesión
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between align-items-center">
            <!-- Texto de copyright -->
            <span>&copy; 2024 - Bingoo!</span>

            <!-- Control de volumen -->
            <div id="volume-control">
                <label for="volume-slider" style="margin-right: 8px; font-size: 14px; font-weight: bold;">Volumen:
                </label>
                <input type="range" id="volume-slider" min="0" max="1" step="0.01" value="0.3" style="width: 150px;">
            </div>

            <!-- Botón de pausa/reanudar música -->
            <button id="toggle-music" class="btn btn-light" style="box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);">
                Pausar Música
            </button>
        </div>
    </footer>

    <!-- Reproductor de música de fondo -->
    <audio id="background-music" autoplay loop>
        <source src="~/music/background-music.mp3" type="audio/mpeg">
        Tu navegador no soporta la reproducción de audio.
    </audio>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        const audio = document.getElementById('background-music');
        const volumeSlider = document.getElementById('volume-slider');
        const toggleMusicButton = document.getElementById('toggle-music');

        // Función para intentar reproducir el audio al cargar la página
        function startAudio() {
            const savedVolume = localStorage.getItem("bgMusicVolume") || 0.3;
            const savedTime = localStorage.getItem("bgMusicTime") || 0;
            const isPaused = localStorage.getItem("bgMusicPaused") === 'true';

            audio.volume = parseFloat(savedVolume);
            volumeSlider.value = savedVolume; // Actualiza el control deslizante
            audio.currentTime = parseFloat(savedTime);

            // Si la música estaba pausada, mantenerla pausada, sino reproducirla
            if (!isPaused) {
                audio.play().catch((e) => {
                    console.log("Autoplay may be blocked by the browser:", e);
                });
                toggleMusicButton.innerHTML = 'Pausar Música';
            } else {
                toggleMusicButton.innerHTML = 'Reproducir Música';
            }

            // Guardar el progreso del audio cada segundo
            setInterval(() => {
                localStorage.setItem("bgMusicTime", audio.currentTime);
            }, 1000);
        }

        // Actualizar volumen cuando se cambia el slider
        volumeSlider.addEventListener('input', function () {
            audio.volume = this.value;
            localStorage.setItem("bgMusicVolume", this.value);
        });

        // Manejar el botón de pausar/reanudar música
        toggleMusicButton.addEventListener('click', function () {
            if (audio.paused) {
                audio.play();
                toggleMusicButton.innerHTML = 'Pausar Música';
                localStorage.setItem("bgMusicPaused", "false");
            } else {
                audio.pause();
                toggleMusicButton.innerHTML = 'Reproducir Música';
                localStorage.setItem("bgMusicPaused", "true");
            }
        });

        // Iniciar la música al cargar el DOM
        document.addEventListener("DOMContentLoaded", startAudio);

        // Guardar estado del audio al salir de la página
        window.addEventListener('beforeunload', function () {
            localStorage.setItem("bgMusicTime", audio.currentTime);
            localStorage.setItem("bgMusicVolume", audio.volume);
            localStorage.setItem("bgMusicPaused", audio.paused);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
